<ul>
  <% if ::Refinery::SmallBusinesses::Admin::SmallBusinessesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.small_businesses_admin_small_businesses_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_small_businesses_admin_small_business_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::SmallBusinesses::Admin::SmallBusinessesController.sortable? && ::Refinery::SmallBusinesses::SmallBusiness.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Small Businesses"),
                 refinery.small_businesses_admin_small_businesses_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Small Businesses"),
                 refinery.small_businesses_admin_small_businesses_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
