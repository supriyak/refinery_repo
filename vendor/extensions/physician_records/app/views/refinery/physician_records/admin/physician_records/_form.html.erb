<%= form_for [refinery, :physician_records_admin, @physician_record] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @physician_record,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :firstname -%>
    <%= f.text_field :firstname, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :lastname -%>
    <%= f.text_field :lastname  -%>

  </div>
  
  <div class='field'>
    <%= f.label :practicename -%>
    <%= f.text_field :practicename  -%>

  </div>
  
  <div class='field'>
    <%= f.label :doctorname -%>
    <%= f.text_field :doctorname  -%>

  </div>
  
  <div class='field'>
    <%= f.label :office_manager -%>
    <%= f.text_field :office_manager  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>

  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip  -%>

  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>

  </div>
  
  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax  -%>

  </div>
  
  <div class='field'>
    <%= f.label :npi_number -%>
    <%= f.number_field :npi_number  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.physician_records.admin.physician_records.physician_record'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @physician_record.firstname) %>
<% end -%>
