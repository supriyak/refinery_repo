<ul>
  <% if ::Refinery::PhysicianRecords::Admin::PhysicianRecordsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.physician_records_admin_physician_records_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_physician_records_admin_physician_record_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::PhysicianRecords::Admin::PhysicianRecordsController.sortable? && ::Refinery::PhysicianRecords::PhysicianRecord.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Physician Records"),
                 refinery.physician_records_admin_physician_records_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Physician Records"),
                 refinery.physician_records_admin_physician_records_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
