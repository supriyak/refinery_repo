  <section>
    <h1>Firstname</h1>
    <p>
      <%=raw @physician_record.firstname %>
    </p>
  </section>
  <section>
    <h1>Lastname</h1>
    <p>
      <%=raw @physician_record.lastname %>
    </p>
  </section>
  <section>
    <h1>Practicename</h1>
    <p>
      <%=raw @physician_record.practicename %>
    </p>
  </section>
  <section>
    <h1>Doctorname</h1>
    <p>
      <%=raw @physician_record.doctorname %>
    </p>
  </section>
  <section>
    <h1>Office Manager</h1>
    <p>
      <%=raw @physician_record.office_manager %>
    </p>
  </section>
  <section>
    <h1>Address1</h1>
    <p>
      <%=raw @physician_record.address1 %>
    </p>
  </section>
  <section>
    <h1>Address2</h1>
    <p>
      <%=raw @physician_record.address2 %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @physician_record.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
