<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="physician_records">
      <% @physician_records.each do |physician_record| %>
        <li>
          <%= link_to physician_record.firstname, refinery.physician_records_physician_record_path(physician_record) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
<%else%> 
	<p style="margin-left: 50px; font-size: 20px;">You are not allowed to view this page.</p>
<% end %>